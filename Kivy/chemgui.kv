            BoxLayout:            
                orientation: 'vertical'
                spacing: 10
                size_hint: 0.35, 1

                Label:
                    id: feedback
                    text: "Feedback"
                    size_hint: 1, 0.05
                    text_size: self.width - 20, self.height
                    
